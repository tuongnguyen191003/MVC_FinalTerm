@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="ChangePassword" asp-controller="Account" method="post" class="change-password-form">
        <div class="form-group">
            
            <label>Password</label>
            <input asp-for="CurrentPassword" class="form-control custom-input" type="password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            
            <label>New Password</label>
            <input asp-for="NewPassword" class="form-control custom-input" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            
            <label>Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control custom-input" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary custom-button">Change Password</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .change-password-form {
        max-width: 500px;
        margin: 0 auto;
    }

    .custom-input {
        max-width: 300px;
        margin-bottom: 20px;
    }

    .custom-button {
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>
