@model SignupViewModel
@{
    ViewData["Title"] = "Signup";
    Layout = "_Layout";
}

<section class="signup_section section_space">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <ul class="nav register_tabnav ul_li_center">
                    <li>
                        <button>
                            Sign up
                        </button>
                    </li>
                </ul>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-action="Signup" method="post">
                    <div class="form_item_wrap">
                        <h3 class="input_title">User Name*</h3>
                        <div class="form_item">
                            <label for="username_input2"><i class="fas fa-user"></i></label>
                            <input id="username_input2" type="text" asp-for="Username" placeholder="User Name">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form_item_wrap">
                        <h3 class="input_title">FullName*</h3>
                        <div class="form_item">
                            <label for="username_input2"><i class="fas fa-user"></i></label>
                            <input id="username_input2" type="text" asp-for="FullName" placeholder="User Name">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form_item_wrap">
                        <h3 class="input_title">Password*</h3>
                        <div class="form_item">
                            <label for="password_input2"><i class="fas fa-lock"></i></label>
                            <input id="password_input2" type="password" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form_item_wrap">
                        <h3 class="input_title">Confirm Password*</h3>
                        <div class="form_item">
                            <label for="password_input2"><i class="fas fa-lock"></i></label>
                            <input id="password_input2" type="password" asp-for="ConfirmPassword" placeholder="Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form_item_wrap">
                        <h3 class="input_title">Email*</h3>
                        <div class="form_item">
                            <label for="email_input"><i class="fas fa-envelope"></i></label>
                            <input id="email_input" type="email" asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-start">
                        <button type="submit" class="btn btn_secondary">Register Now</button>
                    </div>
                </form>

                <div class="social-login">
                    <p>Or sign up using:</p>
                    <form asp-action="GoogleLogin" method="post">
                        <button type="submit" class="btn btn-social btn-google">Continue with Google</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .social-login {
        margin-top: 20px;
    }

    .btn-social {
        display: inline-block;
        width: 100%;
        padding: 10px;
        color: white;
        text-align: center;
        margin-bottom: 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-google {
        background-color: #db4437; /* Màu đỏ của Google */
    }

        .btn-google:hover {
            background-color: #c23321;
        }

    .btn-facebook {
        background-color: #3b5998; /* Màu xanh của Facebook */
    }

        .btn-facebook:hover {
            background-color: #2d4373;
        }
</style>

