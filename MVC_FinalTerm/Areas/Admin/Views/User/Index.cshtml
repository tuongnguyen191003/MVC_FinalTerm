@model IEnumerable<AppUserModel>

@{
    ViewData["Title"] = "List User";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="page-header">List User</h1>
            <a asp-action="Create" class="btn btn-primary mb-2">Create New</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id.ToString()" class="btn btn-danger btn-sm confirmDeletion">Remove</a>
                                @* <form asp-action="DeleteConfirmed" asp-route-id="@item.Id.ToString()" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Remove</button>
                                </form> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>