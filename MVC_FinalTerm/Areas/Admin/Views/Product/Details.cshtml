@model MVC_FinalTerm.Models.ProductModel

@{
    ViewData["Title"] = "View Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="page-header">View Details</h1>

            <div class="row">
                <div class="col-md-4">
                    <img src="~/frontend/images/products/@Model.Image" alt="@Model.Name" class="img-fluid" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.OldPrice)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.OldPrice)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Color)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Color.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.StockQuantity)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.StockQuantity)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.StatusName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.StatusName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.IsOnStatus)
                        </dt>
                        <dd class="col-sm-9">
                            @(Model.IsOnStatus ? "Hiển thị" : "Ẩn")
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Brand)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Brand.Name)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CategoryId)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Ram)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Ram.Value)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Rom)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Rom.Value)
                        </dd>
                    </dl>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</div>